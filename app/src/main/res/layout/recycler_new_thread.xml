<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_recycler_new_thread"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        app:riv_border_color="#333333"
        app:riv_border_width="2dip"
        app:riv_corner_radius="20dip" />

    <ImageButton
        android:id="@+id/close_recycler_new_thread"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/img_recycler_new_thread"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="-9dp"
        android:background="@drawable/button_close" />

    <TextView
        android:id="@+id/title_recycler_new_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_recycler_new_thread"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLength="15"
        android:textColor="@color/toolbar_base" />
</RelativeLayout>