<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_blue_gradient"
    tools:context=".Activity.SplashScreen">

    <TextView
        android:layout_above="@id/img_bca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Merchant Service"
        android:textColor="@color/white_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_bca"
        android:layout_marginTop="-10dp"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bca_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="2019 Copyright. Merchant Service BCA"
        android:textColor="@color/white_color" />

</RelativeLayout>