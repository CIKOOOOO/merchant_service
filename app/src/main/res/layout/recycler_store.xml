<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_rounded_white"
        android:elevation="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_text_name_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:textColor="@color/blue_palette"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recycler_text_earning_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/raven_palette"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recycler_text_transaction_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/mischka_palette"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/greyPalette" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_bank_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rectangle_blue_gradient_rounded"
            android:text="Lihat Detail"
            android:textAllCaps="false"
            android:textColor="@color/mischka_palette" />

    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recycler_img_store"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:elevation="6dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dip" />
</RelativeLayout>