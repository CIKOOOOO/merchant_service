<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_palette">

    <ImageButton
        android:id="@+id/main_icon_toolbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/merchant_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/merchant_title"
        android:textColor="@color/greyPalette"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/burgerMenu"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_toolbar_menu" />

</android.support.v7.widget.Toolbar>